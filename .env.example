# SpaceTask Backend Configuration

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=False

# Security
SECRET_KEY=your-very-secret-key-here-change-this-in-production
JWT_SECRET=your-jwt-secret-key-here-change-this-in-production

# Database
DATABASE_PATH=spacetask.db

# File Upload
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880
BASE_URL=http://localhost:5000

# Email Configuration (for future use)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Push Notifications (for future use)
FIREBASE_SERVER_KEY=your-firebase-server-key
APNS_CERTIFICATE_PATH=path/to/apns/certificate.pem

# Logging
LOG_LEVEL=INFO
LOG_FILE=spacetask.log
